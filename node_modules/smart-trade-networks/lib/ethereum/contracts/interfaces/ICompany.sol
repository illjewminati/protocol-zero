pragma solidity ^0.8.0;

interface ICompany {

    event NewSignatorie(address indexed newSignatorie);
    event RemovedSignatorie(address indexed signatorie);
    event ChangeName(string oldName, string newName);
    event ChangeIpfsLink(bytes32 oldIpfsLink, bytes32 newIpfsLink);

    struct CompanyData {
        string name;
        bytes32 ipfsLink;
        uint256 createdAt;
        address owner;
    }

    function changeName(string calldata _name) external;
    function changeIpfsLink(bytes32 _ipfsLink) external;

    function getData() external view returns (CompanyData memory) ;
}